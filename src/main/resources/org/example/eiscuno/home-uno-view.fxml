<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: orange;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.eiscuno.controller.HomeUnoController">

    <top>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="unoLogo" fitHeight="300" fitWidth="300" pickOnBounds="true" preserveRatio="true" />
                <Label text="Bienvenido al UNO!" style="-fx-font-size: 18px; -fx-text-fill: red;" />
            </children>
        </VBox>
    </top>

    <center>
        <VBox fx:id="playerInfoBox" spacing="8" alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="cardsLabel" text="Cartas puestas: -" style="-fx-font-size: 14px;" />
                <Label fx:id="gamesPlayedLabel" text="Partidas jugadas: -" style="-fx-font-size: 14px;" />
                <Label fx:id="gamesWonLabel" text="Partidas ganadas: -" style="-fx-font-size: 14px;" />
            </children>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="playButton" text="Jugar"
                        onAction="#onPlayGame"
                        style="-fx-font-size: 16px; -fx-background-color: red; -fx-text-fill: white;" prefWidth="120">

                    <VBox.margin>
                        <Insets top="0" right="0" bottom="20" left="0"/>
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </bottom>
</BorderPane>